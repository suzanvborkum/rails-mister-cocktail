<div class="container mt-4">
  <h3 class="mb-3"><%= @cocktail.name %></h3>
  <div class="row">
    <div class="col-4">
      <div class="cocktail-image"><%= image_tag @cocktail.picture_url %></div>
    </div>

    <div class="col-8 cocktail-details">
      <div class="ingredients">
        <h5>Ingredients:</h5>
        <ul class="list-group mt-4">
          <% @cocktail.doses.each do |dose| %>
            <li>
              <%= dose.description %> of
              <%= dose.ingredient.name %>
              <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                <i class="far fa-trash-alt"></i>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>

      <div class="dose-form">
        <p>Add dose for cocktail:</p>
        <%= simple_form_for [@cocktail, @dose] do |f| %>
          <%= f.input :description %>
          <%= f.input :ingredient_id, collection: Ingredient.all %>
          <%= f.button :submit, class: "btn btn-outline-danger" %>
        <% end %>
      </div>
    </div>
  </div>

</div>

